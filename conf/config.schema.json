{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "buildDir": {
      "description": "Location of UI build files",
    	"type": "string",
      "isDirectory": true,
      "default": "$TEMP/ui2-build"
    },
    "mountPoint": {
      "description": "The mount point for the UI, in relation to the appUrl",
    	"type": "string",
      "default": "ui"
    },
    "primaryColour": {
      "description": "Primary palette colour for the UI theme (hex format)",
      "type": "string",
      "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$",
      "default": "#00dd95",
      "_adapt": { "isPublic": true }
    },
    "secondaryColour": {
      "description": "Secondary palette colour for the UI theme (hex format)",
      "type": "string",
      "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$",
      "default": "#34bee0",
      "_adapt": { "isPublic": true }
    },
    "logoUrl": {
      "description": "URL of the logo image displayed in the UI",
      "type": "string",
      "default": "",
      "_adapt": { "isPublic": true }
    },
    "appTitle": {
      "description": "Application title displayed in the UI header and browser tab",
      "type": "string",
      "default": "Adapt Authoring Tool",
      "_adapt": { "isPublic": true }
    }
  }
}
